                    <figcaption>@<%= username %>, <%=age%></figcaption>
                </figure>
            </div> 
                <div class="change-picture-container mt-5">
                    <form action='/profile' method='GET'>
                        <button class='btn btn-outline-dark btn-lg mt-3'type='submit'> Back to Profile </button>
                    </form>
                </div>
            </div>

    <div class="user-content-container col-md-8">
            <!-- preferences -->
            <h5 class='text-center p-5'>Settings</h5>
            <div class='preferences-container d-flex justify-content-center '>

                    <ul class="list-group col-md-6">
                        <a href='#' class='settings-list-item-link'><li class="list-group-item list-item-first">Report Abuse</li></a>
                        <a href='#' class='settings-list-item-link'><li class="list-group-item">Terms and Agreements</li></a>
                        <a href='/privacy-policy' class='settings-list-item-link'><li class="list-group-item">Privacy Policy </li></a>
                        <a href='/help' class='settings-list-item-link'><li class="list-group-item">Help </span></li></a>
                        <a href='/faq' class='settings-list-item-link'><li class="list-group-item">FAQ </span></li></a>

                    </ul>
            </div>

        
    </div>
    </div>
</div>

